<Page x:Class="MediaPlayer.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediaPlayer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="700"
      Title="Home" Loaded="PageLoaded" >

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border BorderThickness="1" CornerRadius="10" BorderBrush="#FFF">
            <MediaElement Height="300" Width="580" Name ="player" LoadedBehavior="Manual">

            </MediaElement>
        </Border>
        
        <Label FontWeight="Bold" HorizontalAlignment="Center" Foreground="#FFF" FontSize="27" Margin="0,30,0,0">Audio title</Label>
        <Label HorizontalAlignment="Center" FontSize="16" Foreground="#FFF">Singer's name</Label>
    </StackPanel>
</Page>
